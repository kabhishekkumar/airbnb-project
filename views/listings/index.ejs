display: none;
}

.tax-toggle{
  border: 1px solid black;
  border-radius: 1rem;
  height: 3.5rem; 
  padding: 1rem;
  margin-left: 1rem;
  display: flex;
  align-items: center;
}
</style>

<div id="filters">
  <div class="filter">
<div><i class="fa-solid fa-fire"></i></div>
<p>Trending</p>
</div>
<div class="filter">
<div><i class="fa-solid fa-house"></i></div>
